apiVersion: apps/v1
kind: Deployment
metadata:
  name: redsea-production-app
  labels:
    app: redsea-production-app
spec:
  replicas: 1
  selector:
    matchLabels:
      app: redsea-production-app
  template:
    metadata:
      labels:
        app: redsea-production-app
    spec:
      containers:
        - name: redsea-production-app
          image: zooniverse/redsea:__IMAGE_TAG__
          resources:
             requests:
               memory: "150Mi"
               cpu: "10m"
             limits:
               memory: "150Mi"
               cpu: "500m"
          env:
            - name: RACK_ENV
              value: "production"
            - name: MAX_THREADS
              value: "5"
          ports:
            - containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: redsea-production-app
spec:
  selector:
    app: redsea-production-app
  ports:
    - protocol: TCP
      port: 80
      targetPort: 80
  type: NodePort
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: redsea-production-redis
  labels:
    app: redsea-production-redis
spec:
  replicas: 1
  strategy:
    type: Recreate
  selector:
    matchLabels:
      app: redsea-production-redis
  template:
    metadata:
      labels:
        app: redsea-production-redis
    spec:
      containers:
        - name: redsea-production-redis
          image: zooniverse/redsea:redis
          resources:
             requests:
               memory: "100Mi"
               cpu: "10m"
             limits:
               memory: "100Mi"
               cpu: "500m"
---
apiVersion: v1
kind: Service
metadata:
  name: redsea-production-redis
spec:
  selector:
    app: redsea-production-redis
  ports:
    - protocol: TCP
      port: 6379
      targetPort: 6379
  type: NodePort
